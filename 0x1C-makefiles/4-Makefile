# Makefile for the `school` exe

# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

# Commands
all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME) 

# Remove files
.PHONY: clean oclean fclean

# deletes all Emacs and Vim temporary files along with the executable
clean:
	$(RM) *~ $(NAME)

# deletes the object files
oclean:
	$(RM) $(OBJ)

# deletes all Emacs and Vim temporary files
fclean: clean oclean

# re: forces recompilation of all source files
re: oclean all
